<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True">
    <ui:GroupBox name="snapData" style="align-items: stretch; justify-content: space-around; flex-direction: flex-start;">
        <ui:VisualElement name="handPoseGroup" style="flex-direction: row-reverse; justify-content: space-between;">
            <ui:VisualElement style="align-items: stretch;">
                <uie:ObjectField label="Pose" name="handPose" binding-path="HandPose" allow-scene-objects="false" type="QCHT.Interactions.Hands.HandPose, QCHT.Interactions" style="justify-content: space-between; align-items: auto;" />
                <ui:VisualElement name="AddAndRemovePose" style="flex-direction: row-reverse; margin-right: 3px;">
                    <ui:Button text="-" display-tooltip-when-elided="true" name="removeHandPose" style="margin-left: 1px; margin-right: 1px;" />
                    <ui:Button text="+" display-tooltip-when-elided="true" name="addHandPose" style="margin-left: 1px; margin-right: 1px;" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="handPoseMaskGroup" style="flex-direction: row-reverse; justify-content: space-between; align-items: stretch; border-top-width: 3px;">
            <ui:VisualElement style="flex-direction: column; align-items: stretch; justify-content: flex-start;">
                <uie:ObjectField label="Mask" name="handPoseMask" allow-scene-objects="false" binding-path="HandPoseMask" type="QCHT.Interactions.Hands.HandPoseMask, QCHT.Interactions" style="justify-content: space-between; align-items: auto; flex-direction: row;" />
                <ui:VisualElement name="addAndRemoveMask" style="flex-direction: row-reverse; align-items: stretch; justify-content: flex-start; margin-right: 3px;">
                    <ui:Button text="-" display-tooltip-when-elided="true" name="removeHandPoseMask" style="margin-left: 1px; margin-right: 1px; margin-top: 1px; margin-bottom: 1px;" />
                    <ui:Button text="+" display-tooltip-when-elided="true" name="addHandPoseMask" style="margin-left: 1px; margin-right: 1px; margin-top: 1px; margin-bottom: 1px;" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:GroupBox>
</ui:UXML>
